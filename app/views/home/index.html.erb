<h2>To Do</h2>

<div ng-controller="TodoController as todo">

<div>
  <input type="text" ng-model="todo.description" placeholder="Enter a todo" />
  <button ng-click="todo.add()">Add</button>
</div>


  <ul>
    <li ng-repeat="item in todo.items" ng-click="todo.remove(item.id)">{{item.description}}</li>
  </ul>

</div>
